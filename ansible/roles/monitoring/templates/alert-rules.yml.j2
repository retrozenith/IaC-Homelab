{% raw %}
groups:
  - name: system_alerts
    rules:
      # High CPU usage
      - alert: HighCpuUsage
        expr: 100 - (avg by(host) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 80
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "High CPU usage on {{ $labels.host }}"
          description: "CPU usage is above 80% for 5 minutes (current: {{ $value | printf \"%.1f\" }}%)"

      # High memory usage
      - alert: HighMemoryUsage
        expr: (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100 > 85
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "High memory usage on {{ $labels.host }}"
          description: "Memory usage is above 85% for 5 minutes (current: {{ $value | printf \"%.1f\" }}%)"

      # Low disk space
      - alert: LowDiskSpace
        expr: (node_filesystem_avail_bytes{fstype!~"tmpfs|overlay"} / node_filesystem_size_bytes{fstype!~"tmpfs|overlay"}) * 100 < 15
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "Low disk space on {{ $labels.host }}"
          description: "Disk space is below 15% on {{ $labels.mountpoint }} (current: {{ $value | printf \"%.1f\" }}% free)"

      # Host down
      - alert: HostDown
        expr: up == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "Host {{ $labels.host }} is down"
          description: "Target has been unreachable for 2 minutes"

  - name: service_alerts
    rules:
      # Container stopped or crashed
      - alert: ContainerDown
        expr: absent(container_last_seen{name=~"jellyfin|sonarr|radarr|prowlarr|jellyseerr|vaultwarden|traefik"})
        for: 3m
        labels:
          severity: critical
          target: docker_services
        annotations:
          summary: "Container {{ $labels.name }} is down"
          description: "Container has been down for more than 3 minutes - triggering self-heal"

      # Container restarting too often
      - alert: ContainerRestarting
        expr: increase(container_restart_count{name=~"jellyfin|sonarr|radarr|prowlarr|jellyseerr|vaultwarden"}[1h]) > 5
        for: 5m
        labels:
          severity: warning
          target: docker_services
        annotations:
          summary: "Container {{ $labels.name }} is restarting frequently"
          description: "Container has restarted more than 5 times in the last hour"

      # Traefik down
      - alert: TraefikDown
        expr: absent(up{job="traefik"} == 1)
        for: 2m
        labels:
          severity: critical
          target: proxies
        annotations:
          summary: "Traefik reverse proxy is down"
          description: "Traefik has been unreachable for 2 minutes - triggering self-heal"
{% endraw %}
