---
# Alertmanager configuration for self-healing with GitHub Actions webhook
#
# This sends alerts to GitHub Actions via repository_dispatch,
# triggering the self-heal workflow automatically.

global:
  resolve_timeout: 5m

route:
  receiver: 'github-webhook'
  group_by: ['alertname', 'host']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  routes:
    # Critical alerts trigger immediate healing
    - match:
        severity: critical
      receiver: 'github-webhook'
      group_wait: 10s
      repeat_interval: 1h

receivers:
  - name: 'github-webhook'
    webhook_configs:
      - url: 'https://api.github.com/repos/retrozenith/IaC-Homelab/dispatches'
        http_config:
          authorization:
            type: Bearer
            credentials: '{{ monitoring_github_pat }}'
        send_resolved: true
        max_alerts: 10

# Templates for alert formatting
templates: []
